<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Warehouse.ViewModels"
             x:DataType="vm:EditItemViewModel"

             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Warehouse.Views.EditItemUc">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Название" Margin="10"/>
            <TextBox Text = "{Binding EditItem.Name}"  Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Цена" Margin="10"/>
            <TextBox Text = "{Binding EditItem.Price}"  Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Описание" Margin="10"/>
            <TextBox Text = "{Binding EditItem.Description}"  Margin="10"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Годен до" Margin="10"/>
            <!-- <TextBox Text="{Binding EditItem.ToDate}"/> -->
            <DatePicker DayFormat="ddd dd" SelectedDate="{Binding ViewTime}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Прибыл" Margin="10"/>
            <ComboBox ItemsSource="{Binding Records}" SelectedItem="{Binding SelectedRecord}" Width="150" Height="30" />
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Тип" Margin="10"/>
            <ComboBox ItemsSource="{Binding ItemTypes}" SelectedItem="{Binding SelectedType}" Width="150" Height="30"/>
        </StackPanel>
        <Button Content="Сохранить" Command="{Binding SaveCommand}" Margin="5"/>
        <Button Content="Закрыть" Command="{Binding CancelCommand}" Margin="5"/>
    </StackPanel>
</UserControl>
